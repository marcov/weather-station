        <input class="externlink rounded" type="button" onclick="openURL('mailto:marcelloalborghetti@gmail.com,marco.vedovati@gmail.com')"  value="Contattaci via email" />
      </div>
      
      <div class="blockdisplay" style="height: 1em;"></div>
      <!--
      <div id="menubottom">
        <h4>Menu</h4>
