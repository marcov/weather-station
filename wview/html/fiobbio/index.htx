      <div id="extrastas" class="section_2 blockdisplay"></div>
      <div id="forecast" class="section_3 blockdisplay"></div>
      <div id="radar" class="blockdisplay"></div>
      <div id="satellite" class="blockdisplay section_4"></div>
      <div id="maps" class="blockdisplay"></div>

      <script>
        $("#button_0").click(function() {
          $('html,body').animate({scrollTop: $(".section_0").offset().top},
                                 'slow');
        });

        $("#button_1").click(function() {
          $('html,body').animate({scrollTop: $(".section_1").offset().top - 50},
                                 'slow');
        });

        $( "#link_extrastas" ).click(function() {
          $('html,body').animate({scrollTop: $("#extrastas").offset().top - 50},
                                 'slow');
          $( "#extrastas" ).empty();
          $( "#extrastas" ).load( "extrastas.html" );
        });

        $( "#link_forecast" ).click(function() {
          $('html,body').animate({scrollTop: $("#forecast").offset().top - 50},
                                 'slow');
          $( "#forecast" ).empty();
          $( "#forecast" ).load( "forecast.html" );
        });

        $( "#link_radar" ).click(function() {
          $('html,body').animate({scrollTop: $("#radar").offset().top},
                                 'slow');
          $( "#radar" ).empty();
          $( "#radar" ).load( "radar.html" );
        });

        $( "#link_satellite" ).click(function() {
          $('html,body').animate({scrollTop: $("#satellite").offset().top - 50},
                                 'slow');
          $( "#satellite" ).empty();
          $( "#satellite" ).load( "satellite.html" );
        });

        $( "#link_maps" ).click(function() {
          $('html,body').animate({scrollTop: $("#maps").offset().top - 50},
                                 'slow');
          $( "#maps" ).empty();
          $( "#maps" ).load( "maps.html" );
        });

        function loadMore()
        {
          console.log("More loaded");
          if ($("#extrastas").is(':empty') ) {
            $( "#extrastas" ).load( "extrastas.html" );
          } else if ($("#forecast").is(':empty') ) {
            $( "#forecast" ).load( "forecast.html" );
          } else if ($("#radar").is(':empty') ) {
            $( "#radar" ).load( "radar.html" );
          } else if ($("#satellite").is(':empty') ) {
            $( "#satellite" ).load( "satellite.html" );
          } else if ($("#maps").is(':empty') ) {
            $( "#maps" ).load( "maps.html" );
          }
          $(window).bind('scroll', bindScroll);
        }

        function bindScroll(){
          if($(window).scrollTop() + $(window).height() > $(document).height() - 100) {
            $(window).unbind('scroll');
            loadMore();
          }
        }

        $(window).scroll(bindScroll);
      </script>     

          
