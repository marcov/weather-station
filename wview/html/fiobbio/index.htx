      <!-- FOOTER START -->
      <div class="blockdisplay">
        <p>
          <b style="font-size:120%">Pagine wview: </b>
          <input class="wviewlink rounded" name="button" type="button" onclick="openURL('almanac.htm')" value="Almanacco">
          <input class="wviewlink rounded" name="button" type="button" onclick="openURL('Daily.htm')" value="Ultime 24 ore">
          <input class="wviewlink rounded" type="button" value="Mese in corso" onclick="openURL('Monthly.htm')">
          <input class="wviewlink rounded" name="button" type="button" onclick="openURL('Yearly.htm')" value="Anno in corso">
          <input class="wviewlink rounded" type="button" value="Previsioni" onclick="openURL('<!--localForecastURL-->')">
        </p>

        <form action="#" method="post">
          <b style="font-size:120%">Archivio dati mese/anno: </b>
          <script type="text/javascript">
            createMonthlySelect("month");
            createYearlySelect("year");
          </script>
          <input class="rounded" type="button" value="Mostra mese" onclick="openNoaaFile(this.form.month.value, this.form.year.value)">
          <input class="rounded" type="button" value="Mostra anno" onclick="openNoaaFile('',this.form.year.value)">

          <br>

          <b style="font-size:120%">Archivio dati giorno: </b>
          <script type="text/javascript">
            createDaySelect("day");
            createMonthlySelect("month1");
            createYearlySelect("year1");
          </script>
          <input class="rounded" type="button" value="Mostra" onclick="openARCFile(this.form.day.value, this.form.month1.value, this.form.year1.value)">
        </form>

        <div class="blockdisplay" style="text-align: left; overflow:scroll;">
          <pre id="noaatext"></pre>
        </div>

      </div>
      <!-- FOOTER END -->

      <div id="extrastas" class="section_2 blockdisplay"></div>
      <div id="forecast"  class="section_3 blockdisplay"></div>
      <div id="radar"     class="blockdisplay"></div>
      <div id="satellite" class="blockdisplay section_4"></div>
      <div id="maps"      class="blockdisplay"></div>

      <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script> 
      <script src="js/menu.js"></script>
      <script src="js/animation.js"></script>
      
